{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noResolve": false,
    "isolatedModules": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "outDir": "."
  },

  "include": [
    "Element1/src/**/*.ts",
    "Element2/src/**/*.ts",
    "Element3/src/**/*.ts",
    "Element4/src/**/*.ts",
    "Element5/src/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
